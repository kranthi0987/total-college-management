<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="About"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:id="@+id/aboutdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Address"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:id="@+id/addressdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="@color/black" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:padding="8dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="More Details"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/admissionDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Admission Details" />

                    <TextView
                        android:id="@+id/qualificationDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Qualification Details" />

                    <TextView
                        android:id="@+id/attendanceDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Attendance Details" />

                    <TextView
                        android:id="@+id/examMarkDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Exam Mark Details" />

                    <TextView
                        android:id="@+id/studentActivityDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Student Activity Details" />

                    <TextView
                        android:id="@+id/paymentDetailsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="otherDetails"
                        android:padding="8dp"
                        android:text="Payment Details" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>